<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_six_iot" model="ir.ui.view">
        <field name="name">pos.payment.method.form.six_iot</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="iot_device_id" domain="[('id', 'in', payment_terminal_ids)]" invisible="use_payment_terminal != 'six_iot'" required="use_payment_terminal == 'six_iot'" />
            </xpath>
        </field>
    </record>
</odoo>
