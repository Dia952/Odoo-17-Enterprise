<?xml version="1.0" encoding="utf-8"?>
<templates>

    <t t-name="sale_timesheet_enterprise.LeaderboardTimerGridRenderer" t-inherit="timesheet_grid.TimerGridRenderer" t-inherit-mode="extension">
        <xpath expr="//div[@t-if='showTimer']" position="attributes">
            <attribute name="t-if" add="or userHasBillingRateGroup" separator=" "/>
        </xpath>
        <xpath expr="//div[@t-if='showTimer or userHasBillingRateGroup']" position="inside">
            <div t-if="userHasBillingRateGroup and !timerState.timerRunning" class="position-relative px-3 py-2 d-flex justify-content-end" t-att-class="{'border-top': isMobile and showTimer}">
                <TimesheetLeaderboard
                    model="props.model"
                    date="props.model.navigationInfo.periodStart.startOf('month')"
                    leaderboard="props.model.data.leaderboard"
                    changeType="(type) => props.model._dataPoint.changeLeaderboardType(type)"
                    type="props.model.data.leaderboardType"
                />
            </div>
        </xpath>
        <xpath expr="//div[@t-if='showTimer or userHasBillingRateGroup']/GridTimesheetTimerHeader" position="attributes">
            <attribute name="t-if">showTimer</attribute>
        </xpath>
    </t>

</templates>
