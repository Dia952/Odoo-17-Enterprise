<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.budget</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <setting id="account_budget" position="inside">
                <div class="content-group" invisible="not module_account_budget">
                    <div class="mt8">
                        <button name="%(account_budget.open_budget_post_form)d" icon="oi-arrow-right" type="action" string="Budgetary Positions" class="btn-link"/>
                    </div>
                </div>
            </setting>
        </field>
    </record>

</odoo>
