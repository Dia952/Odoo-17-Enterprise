                <field name="fsm_done" />
            </xpath>
            <xpath expr="//templates//span[@t-if='record.partner_id.value']" position="inside">
                <span t-if="record.is_fsm.raw_value and record.partner_city.value">
                    â€¢ <field name="partner_city"/>
                </span>
            </xpath>
        </field>
    </record>

